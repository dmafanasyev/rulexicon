title <- "An R package 'rulexicon': Russian lexicons for text analysis"
year <- "2020"
author <- "Dmitriy O. Afanasyev"
authorTxt <- "Afanasyev, D.O."
url <- "https://dmafanasyev.github.io/rulexicon/"

citHeader("To cite the R package 'rulexicon' in publications, please use:")

citEntry(entry = "manual",
    title = title,
    author = author,
    year = year,
    url = url,
    textVersion  = paste(authorTxt, " (", year, "). ", title, ". ", "Available at: ", url)
)

